<h2><%= t('.become')%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='field'>
    <%= f.label t('.first_name') %><br>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class='field'>
    <%= f.label t('.last_name') %><br>
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t('.characters_minimum') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'password', id: 'password' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "password", class: 'confirmation-password ', id: 'confirmation-password' %>
  </div>

  <div class="actions">
    <%= f.submit t(".sign_up") %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
